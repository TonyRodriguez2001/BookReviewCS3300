<p id="notice"><%= notice %></p>

<header>
  <div class="navbar navbar-dark bg-dark ">
    <div class="container">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <strong><%= @book.title %></strong>
      </a>
    </div>
  </div>
</header>

<div class="col-md-4 mx-auto">
          <!--Creating a card for an individual project-->
          <div class="card mb-4 box-shadow">
            <!--Card image thumbnail-->
            <img class="card-img-top  img-fluid" src="<%= (url_for(@book.image)) %>" width="380" height="430" alt="Image of the book <%= @book.title %> cover">
            <!--Creating the individual card-->
            <div class="card-body">
              <h2><%= @book.title %></h2>
              <p class="card-text"><em><b>Rating:</b> <%= @book.rating %><br><b>Published:</b> <%= @book.published %></em></p>
              <p><em><b>Description:</b></em> <%= @book.description %></p>
              <!--Creating the button group-->
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <p>
                <button class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit Book', edit_book_path(@book) %></button>
                <button class="btn btn-sm btn-outline-secondary"><%= link_to 'Back', books_path %></button>
                </p>
                </div>
              </div>
            </div>
          </div>
        </div>
