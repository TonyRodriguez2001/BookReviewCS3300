<body class="bg-black">
<main role="main" class="bg-dark>
  <div class="container mt-2">
    <div class="row bg-black">
      <div class="col-3 ">
        <%= form_tag books_path, method: :get, class: "d-flex justify-content-center bg-dark" do %>
          <%= select_tag :genre, options_for_select(Book.genres.keys), prompt: "All genres", class: "form-select me-2 bg-dark text-white" %>
          <%= submit_tag "Filter", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="album py-5 my-background">
    <div class="container">
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <%= image_tag(book.image, class: "card-img-top") %>
              <div class="card-body">
                <h2 class="card-title text-black"><%= book.title %></h2>
                <p class="card-text text-black"><b>Genre:</b> <%= book.genre.capitalize %><br><b>Rating:</b> <%= book.rating %> <br> <b>Published:</b> <%= book.published %></p>
                <p class="card-text text-black"><%= truncate(book.description, length: 100) %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= button_to 'Show Book', book, method: :get, class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to 'Edit Book', edit_book_path(book), method: :get, class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to 'Delete Book', book, method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: 'Are you sure you want to delete this book?' } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= button_to 'New Book', new_book_path, method: :get, class: "btn btn-primary btn-lg" %>
  </div>
</body>


  <div class="container mt-5 bg-black">
