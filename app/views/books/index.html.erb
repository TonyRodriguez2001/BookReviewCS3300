<p id="notice"><%= notice %></p>

<header>
  <div class="collapse bg-dark" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          <h4 class="text-white">About</h4>
          <p class="text-muted">These are all of the books that have been posted. Each book contains it's title, rating, date of publication, and a description.</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <strong>Books</strong>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
</header>


<main role="main">
  <!--Creating a div element that will be an album with verticle padding of 5 and light background-->
  <div class="album py-5 bg-light">
    <!--creating a container that will hold the cards-->
    <div class="container">
      <div class="row">

    <% @books.each do |book| %>
      
      <div class="col-md-4">
          <!--Creating a card for an individual project-->
          <div class="card mb-4 box-shadow">
            <!--Card image thumbnail-->
            <img class="card-img-top img-thumbnail "  src="<%= (url_for(book.image)) %>" width="380" height="430" alt="Image of the book <%= book.title %> cover">
            <!--Creating the individual card-->
            <div class="card-body">
              <h2><%= book.title %></h2>
              <p class="card-text"><em><b>Rating:</b> <%= book.rating %><br><b>Published:</b> <%= book.published %></em></p>
              <p><em><b>Description:</b></em> <%= book.description %></p>
              <!--Creating the button group-->
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <p>
                <button class="btn btn-sm btn-outline-secondary"><%= link_to 'Show Book', book %></button> 
                <button class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit Book', edit_book_path(book) %></button>
                <button class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete Book', book, method: :delete, data: { confirm: 'Are you sure you want to delete this book?' } %></button>
                </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      
    <% end %>

      </div>
    </div>
  </div>


<button class="btn btn-sm btn-outline-secondary"><%= link_to 'New Book', new_book_path %></button>